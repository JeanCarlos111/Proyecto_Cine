@model IEnumerable<FrontEnd.Models.UserViewModel>

@{
    ViewBag.Title = "Index";
}

<style type="text/css">
    .table {
        font-family: "Trebuchet MS", Arial, Helvetica, sans-serif;
        border-collapse: collapse;
        width: 100%;
    }

        .table td, .table th {
            border: 1px solid #ddd;
            padding: 8px;
        }

        .table tr:nth-child(even) {
            background-color: #f2f2f2;
        }

        .table tr:hover {
            background-color: #ddd;
        }

        .table th {
            padding-top: 12px;
            padding-bottom: 12px;
            text-align: left;
            background-color: #2b2929;
            color: white;
        }
</style>

<a href="@Url.Action("Create", "Usuario")" class="btn btn-primary btn-sm">
    <ion-icon size="small" name="add"></ion-icon>
    <medium>Agregar</medium>
</a>

<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.UserName)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.nombre)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Password)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.mail)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.phone)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.apellidos)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.card)
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.UserName)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.nombre)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Password)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.mail)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.phone)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.apellidos)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.card)
        </td>
        <td>
            <a href="@Url.Action("Edit", "Usuario", new { id = item.UserViewModelId })" class="btn btn-primary btn-sm">
                <ion-icon size="small" name="create"></ion-icon>
                <p><small>Editar</small></p>
            </a>
            <a href="@Url.Action("Details", "Usuario", new { id = item.UserViewModelId })" class="btn btn-primary btn-sm">
                <ion-icon class="" size="small" name="list-box"></ion-icon>
                <p><small>Detalles</small></p>
            </a>
            <a href="@Url.Action("Delete", "Usuario", new { id = item.UserViewModelId })" class="btn btn-primary btn-sm">
                <ion-icon size="small" name="trash"></ion-icon>
                <p><small>Eliminar</small></p>
            </a>
        </td>
    </tr>
}

</table>
