@model IEnumerable<FrontEnd.Models.UserViewModel>

@{
    ViewBag.Title = "Index";
}

<p>
    
        <a href="@Url.Action("Create", "Usuario")" class="btn btn-primary btn-sm">
            <ion-icon size="small" name="add"></ion-icon>
            <medium>Agregar</medium>
        </a>
    
</p>
<div class="container wow fadeInUp">
    <div class="row" id="portfolio-wrapper">
        @foreach (var item in Model) 
        {
            <div class="col-lg-3  border bg-dark text-white" >
                <img  class="border mx-auto d-block " src="~/Images/Terminator.jpg" style="width:240px ;height:155px;">
                <div class="details text-center">

                    <h3 class="text-center text-white">@item.nombre</h3>
                    
                        <a href="@Url.Action("Edit", "Usuario", new { id = item.UserViewModelId})"  class="btn btn-primary btn-sm ">
                        <p><small> <ion-icon class="border"  size="small" name="create"></ion-icon> Editar</small></p>
                        </a>
                        <a href="@Url.Action("Delete", "Usuario", new { id = item.UserViewModelId })" class="btn btn-primary btn-sm">
                            <p><small> <ion-icon   size="small" name="trash" class="border"></ion-icon> Eliminar</small></p>
                        </a>
                    
                        <a href="@Url.Action("Details", "Usuario", new { id = item.UserViewModelId })" class="btn btn-primary btn-sm ">
                            <p><small><ion-icon class="border" size="small" name="list-box"></ion-icon> Detalles</small></p>
                        </a>
                    
                </div>
            </div>
        }
    </div>
</div>
