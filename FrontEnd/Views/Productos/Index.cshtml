@model IEnumerable<FrontEnd.Models.ProductoViewModel>
@{
    ViewBag.Title = "Index";

}

<p>
    
        <a href="@Url.Action("Create", "Productos")" class="btn btn-primary btn-sm">
            <ion-icon size="small" name="add"></ion-icon>
            <medium>Agregar</medium>
        </a>
    
</p>
<div class="container wow fadeInUp">
    <div class="row" id="portfolio-wrapper">
        @foreach (var item in Model)
        {
            <div class="col-lg-3  border bg-dark text-white" >
                <img  class="border mx-auto d-block " src="@item.imagen_comida" style="width:240px ;height:155px;">
                <div class="details text-center">

                    <h3 class="text-center text-white">@item.nombre</h3>
                    
                        <a href="@Url.Action("Edit", "Productos", new { id = item.id_comida })" class="btn btn-primary btn-sm">
                            <ion-icon size="small" name="create"></ion-icon>
                            <p><small>Editar</small></p>
                        </a>
                        <a href="@Url.Action("Delete", "Productos", new { id = item.id_comida })" class="btn btn-primary btn-sm">
                            <ion-icon size="small" name="trash"></ion-icon>
                            <p><small>Eliminar</small></p>
                        </a>
                    
                        <a href="@Url.Action("Details", "Productos", new { id = item.id_comida })" class="btn btn-primary btn-sm">
                            <ion-icon class="" size="small" name="list-box"></ion-icon>
                            <p><small>Detalles</small></p>
                        </a>
                    
                </div>
            </div>
        }
    </div>
</div>